{
  "name": "portfolio-node",
  "dockerComposeFile": ["../../docker-compose.yaml"],
  "service": "node",
  "workspaceFolder": "/var/www/project",
  "customizations": {
    "extensions": [
      "streetsidesoftware.code-spell-checker",
      "GitHub.copilot",
      "oderwat.indent-rainbow",
      "yzhang.markdown-all-in-one",
      "dbaeumer.vscode-eslint",
      "esbenp.prettier-vscode"
    ]
  }
}
